# ===== CORE =====
NODE_ENV=development
DEPLOYMENT_MODE=local

# ===== DATABASE (SUPABASE CLOUD) =====
DATABASE_TYPE=supabase
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===== AUTH =====
AUTH_PROVIDER=supabase
JWT_SECRET=dev-local-secret-change-later

# ===== SERVER =====
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://40.81.230.114:5173/
CORS_ORIGIN=*

# ===== WORKERS (DISABLED) =====
WORKER_MODE=none
QUEUE_REDIS_URL=

# ===== CACHE (IN-MEMORY) =====
CACHE_TYPE=memory

# ===== LOGGING =====
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/api.log

# ===== METRICS =====
ENABLE_METRICS=true
# DO NOT set METRICS_PORT (uses same 3000 via /metrics)

# ===== FRONTEND (VITE) =====
VITE_API_URL=http://40.81.230.114:3000
VITE_APP_NAME=BharatMart
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# ===== ADMIN SEED =====
ADMIN_EMAIL=admin@bharatmart.com
ADMIN_PASSWORD=Admin@123

# ===== OBSERVABILITY =====
OTEL_SERVICE_NAME=bharatmart-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_TRACES_SAMPLER=always_on

# ===== CHAOS ENGINEERING =====
CHAOS_ENABLED=true
CHAOS_LATENCY_MS=800